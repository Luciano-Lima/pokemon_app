#:kivy 1.0.9

<ShowPokemon>:
    GridLayout:
        cols: 2
        spacing: 10
        padding: 10

        TextInput:
            id: user_query
            size_hint_y: None
            height: 40
            hint_text: 'Enter Pokemon Name'

        Button:
            text: 'Search'
            size_hint_y: None
            height: 40
            on_press: root.search(user_query.text)

        AsyncImage:
            id: pokemon_image
            source: root.pokemon_image_source
            allow_stretch: False
            keep_ratio: False
            size_hint_y: 2

        Label:
            id: pokemon_description
            text: root.pokemon_description

<RootWidget>:
    ShowPokemon:
        name: 'show_pokemon'